@using LibrariaProjekt.Server.Models
@model List<Purchase>
@{
    Layout = "_Layout";
}
<div>
    <a asp-controller="Purchase" asp-action="Create" class="btn btn-success">Add Purchase</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserId</th>
                <th>BookId</th>
                <th>PurchaseDate</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>CardholderName</th>
                <th>CardNumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Id</td>
                    <td>@entry.UserId</td>
                    <td>@entry.BookId</td>
                    <td>@entry.PurchaseDate</td>
                    <td>@entry.Quantity</td>
                    <td>@entry.Total</td>
                    <td>@entry.CardholderName</td>
                    <td>@entry.CardNumber</td>
                    <td>
                        <a asp-controller="Purchase" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary col-xs-3">Edit</a>
                        <a asp-controller="Purchase" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger col-xs-3">Delete</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
