<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibrariaProjekt</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid position-relative">

              
                <h1 class="me-3">Libraria</h1>

               
                <ul class="navbar-nav center-menu">
                    @{

                        var navItems = new List<(string Controller, string Text)>()
                        {
                            ("Book", "Book"),
                            ("Borrow", "Borrow"),
                            ("Purchase", "Purchase"),
                            ("Review", "Review"),
                            ("User", "Users"),
					        ("Admin", "Admins")
                        };

                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    }

                    @foreach (var item in navItems)
                    {
                        <li class="nav-item mx-3">
                            <a class="nav-link @(currentController == item.Controller ? "active" : "") text-dark"
                               asp-controller="@item.Controller"
                               asp-action="Index">
                                @item.Text
                            </a>
                        </li>
                    }
                </ul>

                
                <a href="http://localhost:5173"  class="position-absolute end-0 me-4 text-dark">
                    <i class="bi bi-box-arrow-right logout-icon"></i>
                </a>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
