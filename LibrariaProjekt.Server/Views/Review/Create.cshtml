@using LibrariaProjekt.Server.Models
@model Review
@{
    Layout = "_Layout";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success">
                    <h2>Add Review</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <input asp-for="UserId" class="form-control" placeholder="Write UserId" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BookId" class="form-label"></label>
                            <input asp-for="BookId" class="form-control" placeholder="Write BookId" />
                            <span asp-validation-for="BookId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Rating" class="form-label"></label>
                            <input asp-for="Rating" type="number" min="1" max="5" class="form-control" placeholder="Write Rating" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Comment" class="form-label"></label>
                            <input asp-for="Comment" class="form-control" placeholder="Write Comment" />
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>


                        <div>
                            <button type="submit" class="btn btn-success">Create</button>
                            <a asp-controller="Review" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

