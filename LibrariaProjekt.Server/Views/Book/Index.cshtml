@using LibrariaProjekt.Server.Models
@model List<Book>
@{
    Layout = "_Layout";
}
<div>
    <a asp-controller="Book" asp-action="Create" class="btn btn-success">Add Books</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>PublishYear</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Id</td>
                    <td>@entry.Title</td>
                    <td>@entry.Author</td>
                    <td>@entry.PublishYear</td>
                    <td>@entry.Price</td>
                    <td>@entry.Quantity</td>
                    <td>@entry.Category</td>
                    <td>
                        <img src="@entry.Image" style="max-width: 70px; max-height: 100px;" />
                    </td>
                    <td>
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary col-xs-3">Edit</a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger col-xs-3">Delete</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
