@using LibrariaProjekt.Server.Models
@model Book 

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success">
                    <h2>Shto Librin</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        @* <div asp-validation-for="All" class="text-danger"><div> *@
                        <div class="form-group mb-3">
                            <input asp-for="Title" class="form-control" placeholder="Shkruani titullin!" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">

                            <input asp-for="Author" class="form-control" placeholder="Shkruani Autorin" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">

                            <input asp-for="Price" class="form-control" placeholder="Shkruani Qmimin" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">

                            <input asp-for="Quantity" class="form-control" placeholder="Shkruani Sasin" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-3">

                            <input asp-for="Category" class="form-control" placeholder="Shkruani Kategorin" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">

                            <input type="file" name="imageFile" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-success">Create</button>
                            <a asp-views="Book" asp-action="Index" class="btn btn-danger">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>