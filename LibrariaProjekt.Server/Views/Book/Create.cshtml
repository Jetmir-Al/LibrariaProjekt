@using LibrariaProjekt.Server.Models
@model Book
@{
    Layout = "_Layout";
}


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success">
                    <h2>Add Book</h2>
                </div>
                    <div class="card-body">
              <form asp-action="Create" method="post" enctype="multipart/form-data">
                           <div class="form-group mb-3">
                              <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Write Title" />
                                 <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                         <label asp-for="Author" class="form-label"></label>
                            <input asp-for="Author" class="form-control" placeholder="Write Author" />
                         <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                         <label asp-for="PublishYear" class="form-label"></label>
                            <input asp-for="PublishYear" type="number" class="form-control" placeholder="Write Publication Year" />
                         <span asp-validation-for="PublishYear" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                         <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Write Price" />
                         <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                         <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" type="number" class="form-control" placeholder="Write Quantity" />
                         <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                         <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" placeholder="Write Category" />
                         <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                         <label class="form-label">Upload Image</label>
                         <input type="file" name="imageFile" class="form-control" />
                         <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-success">Create</button>
                        <a asp-controller="Book" asp-action="Index" class="btn btn-danger">Cancel</a>
                    </div>
             </form>
        </div>
 </div>
</div>
</div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

